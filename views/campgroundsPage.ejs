    <%-include("partials/header")%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">


                <h1>Welcome to Star Camp</h1>
                <p>If Travelling is an art... then Camping is the Mona Lisa of it.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campsite</a>
                </p>
            </div>
        </header>
        <div class="row text-center">
            <div class="col-lg-12">
                <h3>Most Popular Spots</h3>
            </div>
        </div>
        <div class="row" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.image%>" class="figure-img img-fluid rounded" alt="Camping Site Images">
                    <figcaption class="figure-caption text-center">
                        <h4><%=campground.name%></h4>
                    </figcaption>
                </div>

            </div>

            <%});%>

        </div>
    </div>
    <div class="container">
        <p>
            <a class="btn btn-primary btn-md" href="/">Back to Landing Page</a>
        </p>
    </div>
    <%-include("partials/header")%>